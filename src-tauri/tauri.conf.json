{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "STEM",
  "version": "1.0.0",
  "identifier": "com.leong.stem",
  "build": {
    "beforeDevCommand": "bun run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "bun run build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "STEM",
        "width": 1200,
        "height": 800,
        "minWidth": 800,
        "minHeight": 600,
        "decorations": false,
        "transparent": false,
        "dragDropEnabled": false
      }
    ],
    "security": {
      "csp": "default-src 'self'; script-src 'self'; style-src 'self' 'unsafe-inline'; img-src 'self' asset: https://asset.localhost data:; font-src 'self' asset: https://asset.localhost; connect-src 'self' ipc: http://ipc.localhost ws://localhost:1421 http://localhost:11434;"
    }
  },
  "plugins": {
    "updater": {
      "pubkey": "dW50cnVzdGVkIGNvbW1lbnQ6IG1pbmlzaWduIHB1YmxpYyBrZXk6IDdDMzVBNkVERUUzRjc4Q0EKUldUS2VEL3U3YVkxZkVTdU5jUnRxVnhNa2U4WGZ2d3RSZ2NMSDk1anpaYlREc29aN295dW9oVkMK",
      "endpoints": [
        "https://github.com/JustNelo/Stem/releases/latest/download/latest.json"
      ]
    }
  },
  "bundle": {
    "createUpdaterArtifacts": true,
    "active": true,
    "targets": ["nsis", "deb", "appimage"],
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
